<?xml version="1.0" encoding="utf-8"?>
<!-- Place this file in res/drawable/button_rounded.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/f2"/>

    <!-- Corner radius (controls how curved the button is) -->
    <corners android:radius="30dp"/>

    <!-- Optional: Add a border/stroke -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"/>

    <!-- Optional: Add padding inside the button -->
    <padding
        android:left="16dp"
        android:top="0dp"
        android:right="16dp"
        android:bottom="0dp"/>

</shape>