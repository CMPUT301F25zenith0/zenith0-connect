<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f3"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/wait_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Join &lt;Name of Event> ?"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Bullet Points Container -->
    <LinearLayout
        android:id="@+id/bulletPointsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wait_title"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <!-- Bullet Point 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Action adds you to the waiting list"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Bullet Point 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share your location (optional) to confirm eligibility"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Location Permission Buttons -->
    <LinearLayout
        android:id="@+id/permissionButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bulletPointsContainer"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!-- Allow Once Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_allow_once"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:text="Allow Once"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:backgroundTint="#2D4D4D"
            app:cornerRadius="20dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1dp" />

        <!-- Don't Allow Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dont_allow"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Don't Allow"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:backgroundTint="#2D4D4D"
            app:cornerRadius="20dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <!-- Confirm Join Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_join"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:text="Confirm Join"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@color/f5"
        app:cornerRadius="28dp" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@color/f5"
        app:cornerRadius="28dp" />

</RelativeLayout>