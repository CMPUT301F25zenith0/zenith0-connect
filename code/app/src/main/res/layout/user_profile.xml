<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A8A8A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Top Bar with Back and Logout Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_back_arrow"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:backgroundTint="@color/f5"
                app:cornerRadius="20dp"/>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:text="Logout"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@color/f5"
                app:cornerRadius="20dp"/>

        </RelativeLayout>


        <!-- Profile Image Container -->
        <RelativeLayout
            android:id="@+id/profileContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_example"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Image" />

            <!-- Edit Icon -->
            <ImageButton
                android:id="@+id/edit_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@id/profile_img"
                android:layout_alignBottom="@id/profile_img"
                android:src="@drawable/ic_edit"
                android:padding="6dp"
                android:background="@drawable/rounded_image_button"
                android:scaleType="centerInside"
                android:contentDescription="Edit Profile" />

        </RelativeLayout>

        <!-- Form Fields Container -->
        <LinearLayout
            android:id="@+id/device_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <!-- Name Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/name_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_profile_name"
                    app:tint="#000000"
                    android:contentDescription="Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/name_icon"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Amy Young"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:inputType="textPersonName" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Email Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_email"
                    app:tint="#000000"
                    android:contentDescription="Email" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/email_icon"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Mail"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/et_email_profile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="amyoung@random.com"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:inputType="textEmailAddress" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Device ID Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/ivDeviceIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_device_icon"
                    app:tint="#000000"
                    android:contentDescription="Device ID" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivDeviceIcon"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device ID"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/et_device"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="• • • • • • •"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:inputType="text"
                        android:enabled="false" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Phone Number Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/phone_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_phone"
                    app:tint="#000000"
                    android:contentDescription="Phone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/phone_icon"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone no."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="+98 1245560090"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:inputType="phone" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/f5"
                app:cornerRadius="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:backgroundTint="@color/f5"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_org_view"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Org View"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:backgroundTint="#8FAF8F"
                app:cornerRadius="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_admin_view"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Admin View"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:backgroundTint="#8FAF8F"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>