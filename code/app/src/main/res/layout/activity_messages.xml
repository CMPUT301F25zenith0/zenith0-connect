<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F8A8A">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#5F8A8A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button (icon) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:backgroundTint="#2C4E4E"
            android:contentDescription="Back"
            app:icon="@android:drawable/ic_media_previous"
            app:iconTint="#FFFFFF"
            app:iconPadding="0dp"
            app:cornerRadius="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Organizer Messages "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.523" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage events and send notifications to entrants"
        android:textSize="14sp"
        android:textColor="#2C4E4E"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Configuration Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C4E4E"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event ID"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#92B8A0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_event_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEST_EVENT"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#92B8A0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Community Basketball"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2C4E4E"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Notification Buttons Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notifications"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C4E4E"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notify_chosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify All Entrants"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:backgroundTint="#92B8A0"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notify_waiting_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Waiting List"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:backgroundTint="#92B8A0"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="12dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2C4E4E"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Messages Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C4E4E"
                android:layout_marginBottom="12dp"/>

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜°"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:paddingEnd="12dp" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search messages"
                    android:textColorHint="#999999"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp" />

                <TextView
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:paddingStart="12dp" />
            </LinearLayout>

            <!-- Filter By Event Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterByEvent"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Filter By Event"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:backgroundTint="#92B8A0"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="end"
                app:cornerRadius="24dp" />

            <!-- Messages RecyclerView Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMessages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"/>

                <!-- Empty State for Messages -->
                <TextView
                    android:id="@+id/tvNoMessages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No messages yet"
                    android:textSize="16sp"
                    android:textColor="#4A6B6B"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- New Message Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewMessage"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="New Message"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:backgroundTint="#92B8A0"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_gravity="end"
                android:layout_marginBottom="16dp"
                app:cornerRadius="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2C3E3E"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavDashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:minHeight="44dp"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="#1A2828"
            android:layout_marginEnd="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Message"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:minHeight="44dp"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="#1A2828"
            android:layout_marginEnd="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Map"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:minHeight="44dp"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="#1A2828"
            android:layout_marginEnd="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:minHeight="44dp"
            android:maxLines="1"
            android:singleLine="true"
            android:backgroundTint="#1A2828"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:cornerRadius="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>