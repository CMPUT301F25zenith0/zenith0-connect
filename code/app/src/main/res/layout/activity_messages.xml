<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/card_bg_light"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:contentDescription="Back"
            app:cornerRadius="22dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_back_arrow"
            app:iconTint="@color/dark_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Messages"
            android:textColor="@color/text_primary_light"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage events and send notifications to entrants"
        android:textSize="14sp"
        android:textColor="@color/text_secondary_light"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/mist_pink"
                app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <!-- Event Configuration Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event ID"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="@color/card_bg_light"
                app:boxStrokeColor="@color/mist_pink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_event_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEST_EVENT"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/card_bg_light"
                app:boxStrokeColor="@color/mist_pink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Community Basketball"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mist_pink"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Notification Buttons Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notifications"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notify_chosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify All Entrants"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/dark_blue"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notify_waiting_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Waiting List"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/dark_blue"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="12dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mist_pink"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Messages Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:layout_marginBottom="12dp"/>

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜°"
                    android:textSize="20sp"
                    android:textColor="@color/dark_blue"
                    android:paddingEnd="12dp" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search messages"
                    android:textColorHint="#999999"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp" />

                <TextView
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”"
                    android:textSize="20sp"
                    android:textColor="@color/dark_blue"
                    android:paddingStart="12dp" />
            </LinearLayout>
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Filter By Event Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterByEvent"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Filter By Event"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/dark_blue"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="end"
                app:cornerRadius="24dp" />

            <!-- Messages RecyclerView Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="12dp"
                android:background="@color/card_bg_light"
                android:elevation="1dp"
                android:padding="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMessages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"/>

                <!-- Empty State for Messages -->
                <TextView
                    android:id="@+id/tvNoMessages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No messages yet"
                    android:textSize="16sp"
                    android:textColor="#4A6B6B"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- New Message Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewMessage"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="New Message"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:backgroundTint="@color/dark_blue"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_gravity="end"
                android:layout_marginBottom="16dp"
                app:cornerRadius="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/card_bg_light"
        android:elevation="8dp"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavDashboard"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="DASHBOARD"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMessage"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="MESSAGE"
            android:textAllCaps="true"
            android:textColor="@color/accent_orange"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/accent_orange" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMap"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="MAP"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_mapmode"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavProfile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="PROFILE"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>