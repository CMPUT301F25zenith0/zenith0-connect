<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#020617"
        android:fillViewport="true"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back"
                android:tint="#FBBF24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Event Details Title -->
            <TextView
                android:id="@+id/event_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Ticket"
                android:textColor="#F9FAFB"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/back_btn"
                app:layout_constraintTop_toTopOf="@id/back_btn"
                app:layout_constraintBottom_toBottomOf="@id/back_btn" />

            <!-- Event Image Placeholder -->
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/login_illustration"
                android:padding="24dp"
                android:contentDescription="Event Image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_detail" />

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textColor="#FBBF24"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_image" />

            <!-- DARK TICKET CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#0B1120"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeColor="#1F2937"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/event_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Org & Status -->
                    <TextView
                        android:id="@+id/tv_org_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization"
                        android:textColor="#E5E7EB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Ticket"
                        android:textColor="#6EE7B7"
                        android:textSize="14sp" />

                    <!-- Date &amp; Time -->
                    <TextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Date &amp; Time"
                        android:textColor="#9CA3AF"
                        android:textSize="13sp" />

                    <!-- Location -->
                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Location"
                        android:textColor="#9CA3AF"
                        android:textSize="13sp" />

                    <!-- Registration Window -->
                    <TextView
                        android:id="@+id/tv_reg_window"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Registration Window"
                        android:textColor="#FBBF24"
                        android:textSize="13sp"
                        android:background="@drawable/btn_primary"
                        android:padding="10dp"
                        android:textAlignment="center" />

                    <!-- Waiting List Count -->
                    <TextView
                        android:id="@+id/tv_waiting_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Waiting List"
                        android:textColor="#E5E7EB"
                        android:textSize="13sp"
                        android:background="@drawable/btn_primary"
                        android:padding="10dp"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Info Button -->
            <Button
                android:id="@+id/btn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/btn_primary"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_waiting_list" />

            <!-- Button Container -->
            <LinearLayout
                android:id="@+id/btnContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_info"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Join Waiting List Button -->
                <Button
                    android:id="@+id/btn_join_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Join Queue"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/btn_primary"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <!-- Leave Waiting List Button -->
                <Button
                    android:id="@+id/btn_leave_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Leave Queue"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:background="@drawable/btn_primary"
                    android:padding="12dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

</FrameLayout>