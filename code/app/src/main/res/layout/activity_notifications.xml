<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:background="@color/card_bg_light"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="6dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back button (ImageButton version - for compatibility) -->
        <ImageButton
            android:id="@+id/noti_btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:tint="@color/dark_blue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title (tvTitle version) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="My Notifications"
            android:textColor="@color/text_primary_light"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title (noti_page_title version - for compatibility) -->
        <TextView
            android:id="@+id/noti_page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Notifications"
            android:textColor="@color/text_primary_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Subtitle (tvSubtitle version) -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="View your event invitations and updates"
        android:textColor="@color/text_secondary_light"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Subtitle (subtitle_text version - for compatibility) -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View your event invitations and updates"
        android:textColor="@color/text_secondary_light"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Toggle Section -->
    <LinearLayout
        android:id="@+id/toggleSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/card_bg_light"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <TextView
            android:id="@+id/notif_recieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="Receive Notifications?"
            android:textColor="@color/text_primary_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_toggle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:text="Toggle Yes/No"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:backgroundTint="@color/dark_blue"
            app:cornerRadius="22dp"
            app:strokeColor="@color/mist_pink"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <!-- Notifications List -->
    <FrameLayout
        android:id="@+id/notificationsFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/card_bg_light"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleSection">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_notifications"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/tv_no_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ðŸ“­"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No notifications yet"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="You'll see event updates here"
                android:textColor="@color/text_secondary_light"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/card_bg_light"
        android:elevation="12dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="HOME"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/myevents_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="EVENTS"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scan_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="SCAN"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="PROFILE"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notificaton_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="ALERTS"
            android:textAllCaps="true"
            android:textColor="@color/accent_orange"
            android:textSize="11sp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_popup_reminder"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/accent_orange" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>