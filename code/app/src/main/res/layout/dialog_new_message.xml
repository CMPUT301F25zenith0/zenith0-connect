<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Event Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Event"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerEvent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Recipient Group Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send To"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerRecipients"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_border"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Message Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etMessageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter title"
        android:textColorHint="@color/text_secondary_light"
        android:textSize="14sp"
        android:background="@drawable/rounded_border"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:maxLines="1"/>

    <!-- Message Body -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etMessageBody"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Enter your message"
        android:textColorHint="@color/text_secondary_light"
        android:textSize="14sp"
        android:background="@drawable/rounded_border"
        android:padding="12dp"
        android:gravity="top"
        android:layout_marginBottom="20dp"
        android:maxLength="500"
        android:inputType="textMultiLine"/>

    <!-- Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendMessage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Send Message"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/dark_blue"
        app:cornerRadius="24dp"/>
</LinearLayout>