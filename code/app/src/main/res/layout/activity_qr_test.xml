<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".activities.QRTestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Code Generator Test"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- ImageView to display the generated QR code -->
    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        android:background="#F0F0F0"
        android:contentDescription="QR Code" />

    <!-- EditText to enter event ID -->
    <EditText
        android:id="@+id/eventIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event ID (e.g., event_12345)"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to generate QR code -->
    <Button
        android:id="@+id/generateQrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate QR Code"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginBottom="12dp"/>

    <!-- Button to generate colored QR code -->
    <Button
        android:id="@+id/generateColoredQrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Colored QR Code"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_marginBottom="12dp"/>

    <!-- TextView to display the encoded URL -->
    <TextView
        android:id="@+id/qrDataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Code Data will appear here"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:padding="8dp"/>

</LinearLayout>