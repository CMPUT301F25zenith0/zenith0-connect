<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/vision_text_primary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_detail_severity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:textSize="16sp"
        android:textColor="@color/vision_text_primary"
        tools:text="Severity: 4.0 / 5" />

    <TextView
        android:id="@+id/tv_detail_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:textSize="16sp"
        android:textColor="@color/vision_accent_blue"
        tools:text="Status: Pending" />

    <TextView
        android:id="@+id/tv_detail_reporter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:textSize="16sp"
        android:textColor="@color/vision_text_secondary"
        tools:text="Reported by: Loading..." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/vision_text_primary"/>

    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:textColor="@color/vision_text_secondary"
        tools:text="This event encourages illegal activities and includes hate speech in the promotional materials." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_detail_cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/vision_text_secondary"/>

        <Button
            android:id="@+id/btn_detail_resolve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resolve"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/vision_accent_green"/>

    </LinearLayout>

</LinearLayout>