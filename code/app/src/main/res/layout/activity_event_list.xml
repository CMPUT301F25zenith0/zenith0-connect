<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f3">

    <!-- Toolbar removed -->

    <LinearLayout
        android:id="@+id/content_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Search Bar -->

        <LinearLayout
            android:id="@+id/search_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/f1"
            android:gravity="center_vertical">

            <!-- Hamburger -->

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/menu"
                android:tint="@color/black"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@color/black" />

            <!-- Search Bar -->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/search_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/search_events_hint"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@color/white"
                app:hintTextColor="@color/hint_colour"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusTopStart="28dp"
                app:boxCornerRadiusTopEnd="28dp"
                app:boxCornerRadiusBottomStart="28dp"
                app:boxCornerRadiusBottomEnd="28dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_colour"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Search Icon -->

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_search"
                android:contentDescription="@string/search_events_hint"
                android:tint="@color/black"
                android:padding="12dp"
                app:tint="@color/black" />

            <!-- Profile Button -->

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_profile_name"
                android:contentDescription="@string/profile"
                android:tint="@color/black"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@color/black" />

        </LinearLayout>

        <!-- Filter Chips -->

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:background="@color/f3"
            app:singleSelection="false"
            app:chipSpacingHorizontal="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="@string/filter_interest"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/f3"
                app:chipStrokeColor="@color/white"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="20dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="@string/filter_date"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/f3"
                app:chipStrokeColor="@color/white"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="20dp"
                android:checkable="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="@string/filter_location"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/f3"
                app:chipStrokeColor="@color/white"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="20dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_clear_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:text="Clear Filters"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/f3"
                app:chipStrokeColor="@color/white"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="20dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Event List -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:background="@color/f3"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- Progress Indicator -->

        <ProgressBar
            android:id="@+id/events_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:indeterminateTint="@color/white" />

        <!-- Empty State -->

        <TextView
            android:id="@+id/events_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/events_empty"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

