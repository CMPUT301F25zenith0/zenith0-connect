<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- JACKPOT HEADER BAR -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg_light"
            app:strokeColor="@color/accent_orange"
            app:strokeWidth="2dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="@string/menu"
                    android:tint="@color/accent_orange"
                    android:padding="6dp"
                    app:tint="@color/accent_orange" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE JACKPOT EVENTS"
                        android:textAllCaps="true"
                        android:textColor="@color/accent_orange"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/search_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="@string/search_events_hint"
                        app:boxBackgroundColor="@color/background_light"
                        app:boxStrokeColor="@color/accent_orange"
                        app:hintTextColor="@color/text_secondary_light"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/search_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:textColor="@color/text_primary_light"
                            android:textColorHint="@color/text_secondary_light"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@string/search_events_hint"
                    android:tint="@color/accent_green"
                    android:padding="6dp"
                    app:tint="@color/accent_green" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/ic_profile_name"
                    android:backgroundTint="@color/accent_orange"
                    android:contentDescription="@string/profile"
                    android:padding="6dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FILTER CHIPS AS BETTING CHIPS -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            app:chipSpacingHorizontal="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_interest"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_interest"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/accent_orange"
                app:chipStrokeColor="@color/accent_orange_light"
                app:chipStrokeWidth="2dp"
                app:chipCornerRadius="20dp"
                android:textStyle="bold"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_date"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_date"
                android:textColor="@color/black"
                android:checkable="false"
                app:chipBackgroundColor="@color/accent_green"
                app:chipStrokeColor="#2E7D32"
                app:chipStrokeWidth="2dp"
                app:chipCornerRadius="20dp"
                android:textStyle="bold"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_location"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_location"
                android:textColor="@color/white"
                app:chipBackgroundColor="#1E3A8A"
                app:chipStrokeColor="#60A5FA"
                app:chipStrokeWidth="2dp"
                app:chipCornerRadius="20dp"
                android:textStyle="bold"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_clear_filters"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_clear"
                app:chipIconTint="@color/accent_red"
                android:text="CLEAR"
                android:textColor="@color/accent_red"
                app:chipBackgroundColor="@android:color/transparent"
                app:chipStrokeColor="@color/accent_red"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="20dp"
                android:textStyle="bold"
                app:iconStartPadding="4dp"
                app:textStartPadding="0dp"/>

        </com.google.android.material.chip.ChipGroup>

        <!-- EVENT LIST AS TICKET WALL -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- PROGRESS + EMPTY STATES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <ProgressBar
                android:id="@+id/events_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/accent_orange" />

            <TextView
                android:id="@+id/events_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/events_empty"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

