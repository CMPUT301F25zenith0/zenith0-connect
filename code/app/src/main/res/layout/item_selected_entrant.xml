<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Left column -->
        <LinearLayout
            android:id="@+id/leftCol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rightButtons"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name**"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Selected"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline: MM DD, YYYY"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Right vertical buttons -->
        <LinearLayout
            android:id="@+id/rightButtons"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemind"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="remind"
                android:textAllCaps="false"
                android:textColor="#2C4E4E"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:backgroundTint="#DDEEEF"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#2C4E4E"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:backgroundTint="#DDEEEF"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReplace"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Replace"
                android:textAllCaps="false"
                android:textColor="#2C4E4E"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:backgroundTint="#DDEEEF"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
