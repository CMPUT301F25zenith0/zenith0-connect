<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/card_bg_light"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDashboardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizer Dashboard"
                    android:textColor="@color/text_primary_light"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Manage upcoming events and draws"
                    android:textColor="@color/text_secondary_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewEvent"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:backgroundTint="@color/dark_blue"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Filter Tabs -->
    <LinearLayout
        android:id="@+id/layoutFilterTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTotalEvents"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Events"
            android:textColor="@color/interests"
            android:textSize="12sp"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/mist_pink"
            app:strokeColor="@color/interests"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpen"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Open"
            android:textColor="@color/interests"
            android:textSize="12sp"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/mist_pink"
            app:strokeColor="@color/interests"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClosed"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Closed"
            android:textColor="@color/interests"
            android:textSize="12sp"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/mist_pink"
            app:strokeColor="@color/interests"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDrawn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Drawn"
            android:textColor="@color/interests"
            android:textSize="12sp"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:backgroundTint="@color/mist_pink"
            app:strokeColor="@color/interests"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"/>
    </LinearLayout>

    <!-- List of Events Title -->
    <TextView
        android:id="@+id/tvListOfEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Events"
        android:textColor="@color/text_primary_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutFilterTabs"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEvents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvListOfEvents"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_event_card"/>

    <!-- Bottom Navigation (kept as buttons per your layout) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/card_bg_light"
        android:elevation="12dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavDashboard"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="DASHBOARD"
            android:textColor="@color/accent_orange"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/accent_orange" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMessage"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="MESSAGES"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMap"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="MAP"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_mapmode"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavProfile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PROFILE"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


