<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â†"
            android:textSize="20sp"
            android:textColor="#000000"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingBottom="96dp"
            android:clipToPadding="false">

            <!-- Event Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Enter event name"
                android:textSize="13sp"
                android:textColorHint="#999999"
                android:background="@android:drawable/edit_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="Describe your event"
                android:textSize="13sp"
                android:textColorHint="#999999"
                android:background="@android:drawable/edit_text"
                android:gravity="top|start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Event Labels/Tags -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Labels (Optional)"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select labels that describe your event"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginBottom="8dp" />

            <!-- Labels Selection (Multi-select chips) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:selectionRequired="false"
                android:layout_marginBottom="12dp" />

            <!-- Event Image and Schedule Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Event Image -->
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@android:color/darker_gray">

                    <ImageView
                        android:id="@+id/ivEventImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:contentDescription="Event Image" />

                    <ImageView
                        android:id="@+id/ivAddImage"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="4dp"
                        android:src="@android:drawable/ic_input_add"
                        android:contentDescription="Add Image" />
                </FrameLayout>

                <!-- Event Schedule -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â° Event Schedule"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- Start Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Start:"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnStartDate"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:text="Select Date"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:minHeight="32dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp" />

                        <Button
                            android:id="@+id/btnStartTime"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Select Time"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:minHeight="32dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />
                    </LinearLayout>

                    <!-- End Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="End:"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnEndDate"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:text="Select Date"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:minHeight="32dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp" />

                        <Button
                            android:id="@+id/btnEndTime"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Select Time"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:minHeight="32dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Registration Period -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ Registration Period"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Opens -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opens:"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnRegistrationOpens"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="ðŸ“…  Select"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:gravity="start|center_vertical"
                        android:minHeight="40dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:strokeColor="#CCCCCC"
                        app:cornerRadius="6dp" />
                </LinearLayout>

                <!-- Closes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closes:"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnRegistrationCloses"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="ðŸ“…  Select"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:gravity="start|center_vertical"
                        android:minHeight="40dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:strokeColor="#CCCCCC"
                        app:cornerRadius="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Draw Capacity and Waiting List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Draw Capacity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Draw Capacity"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etDrawCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="e.g 10"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:textColorHint="#999999"
                        android:background="@android:drawable/edit_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>

                <!-- Waiting List -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waiting List"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etWaitingList"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="e.g 10+"
                        android:inputType="text"
                        android:textSize="12sp"
                        android:textColorHint="#999999"
                        android:background="@android:drawable/edit_text"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="ðŸ“  Event Location"
                android:textSize="12sp"
                android:textColorHint="#999999"
                android:background="@android:drawable/edit_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp" />

            <!-- Require Geolocation Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Require Geolocation"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify attendee location during check-in"
                        android:textColor="#666666"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchGeolocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#81C4C4" />
            </LinearLayout>

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="$  0.00"
                android:inputType="numberDecimal"
                android:textSize="12sp"
                android:textColorHint="#999999"
                android:background="@android:drawable/edit_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSaveDraft"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Save Draft"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:backgroundTint="#2C4E4E"
            android:layout_marginEnd="10dp"
            app:cornerRadius="24dp" />

        <Button
            android:id="@+id/btnPublishQR"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Publish &amp; Generate QR"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:backgroundTint="#1A3838"
            app:cornerRadius="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>