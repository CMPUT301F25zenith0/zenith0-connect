<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Event Image with Add Icon -->
        <FrameLayout
            android:id="@+id/frameEventImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ivEventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="Event Image"/>

            <!-- Add Icon Overlay -->
            <ImageView
                android:id="@+id/ivAddIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Add Image"
                app:tint="#4CAF50"/>
        </FrameLayout>

        <!-- Event Details -->
        <LinearLayout
            android:id="@+id/layoutEventDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/frameEventImage"
            app:layout_constraintStart_toEndOf="@id/frameEventImage"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textColor="@color/charcoal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvStatusClip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Clip"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Action Buttons Row 1 -->
        <LinearLayout
            android:id="@+id/layoutActionButtons1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/frameEventImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnEditEvent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Event"
                android:textColor="@color/text_secondary"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                android:layout_marginEnd="8dp"
                android:focusable="true"
                android:clickable="true"
                app:rippleColor="@color/primary_gold"/>

            <Button
                android:id="@+id/btnDetails"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Details"
                android:textColor="@color/text_secondary"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                android:focusable="true"
                android:clickable="true"
                app:rippleColor="@color/primary_gold"/>
        </LinearLayout>

        <!-- Action Buttons Row 2 -->
        <LinearLayout
            android:id="@+id/layoutActionButtons2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutActionButtons1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnManageDraw"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manage Draw"
                android:textColor="@color/text_secondary"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                android:layout_marginEnd="8dp"
                android:focusable="true"
                android:clickable="true"
                app:rippleColor="@color/primary_gold"/>

            <Button
                android:id="@+id/btnExportCSV"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Export As CSV"
                android:textColor="@color/text_secondary"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                android:focusable="true"
                android:clickable="true"
                app:rippleColor="@color/primary_gold"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>