<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020617"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_arrow"
                android:tint="#FBBF24" />

            <TextView
                android:id="@+id/wait_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create Draw Profile"
                android:textColor="#F9FAFB"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Full Name -->
        <TextView
            android:id="@+id/full_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="#E5E7EB"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:hint="Your legal name"
            android:textColor="#F9FAFB"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="textPersonName" />

        <!-- Display Name -->
        <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Name"
            android:textColor="#E5E7EB"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_display_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:hint="Name on tickets"
            android:textColor="#F9FAFB"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="text" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#E5E7EB"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_email_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:hint="Where wins get sent"
            android:textColor="#F9FAFB"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="textEmailAddress" />

        <!-- Password -->
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#E5E7EB"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:hint="Lock your vault"
            android:textColor="#F9FAFB"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="textPassword" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/et_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bg"
            android:hint="Confirm password"
            android:textColor="#F9FAFB"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="textPassword" />

        <!-- Mobile Number -->
        <TextView
            android:id="@+id/mobile_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textColor="#E5E7EB"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_mobile_num"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:hint="For urgent draw alerts"
            android:textColor="#F9FAFB"
            android:textColorHint="#6B7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="phone" />

        <!-- Create Account Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_acct"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:text="Create Account"
            android:textColor="#020617"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:backgroundTint="#FBBF24"
            app:cornerRadius="28dp"
            app:elevation="0dp" />

    </LinearLayout>

</ScrollView>