<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A8A8A">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/noti_btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#000000"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/noti_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/noti_btn_back"
            android:text="Notifications"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Toggle Section -->
    <LinearLayout
        android:id="@+id/toggleSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerSection"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/notif_recieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Receive Notifications?"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_toggle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Toggle Yes/No"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:backgroundTint="#2D4D4D"
            app:cornerRadius="20dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <!-- ListView for Notifications -->
    <ListView
        android:id="@+id/noti_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toggleSection"
        android:layout_above="@id/bottomNavigation"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/home_btn"
            android:textSize="@dimen/nav_bar_txt_size"
            android:background="@drawable/nav_bar_btns"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/myevents_btn"
            android:textSize="@dimen/nav_bar_txt_size"
            android:background="@drawable/nav_bar_btns"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Events"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/scan_btn"
            android:textSize="@dimen/nav_bar_txt_size"
            android:background="@drawable/nav_bar_btns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scan"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nav_bar_btns"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/nav_bar_txt_size" />

        <Button
            android:id="@+id/notificaton_btn"
            android:textSize="@dimen/nav_bar_txt_size"
            android:background="@drawable/nav_bar_btns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Noti"
            android:textColor="#FFFFFF"/>

    </LinearLayout>


</RelativeLayout>