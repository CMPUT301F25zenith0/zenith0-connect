<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/vision_card_bg"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_report_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/vision_accent_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="TYPE: EVENT" />

        <TextView
            android:id="@+id/tv_report_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/vision_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            tools:text="Item ID: 897gh4..." />

        <TextView
            android:id="@+id/tv_report_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/vision_text_secondary"
            android:textSize="12sp"
            tools:text="Reason: Inappropriate content and hate speech in the comments section." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_report_details"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Details"
                app:cornerRadius="8dp"
                app:strokeColor="@color/vision_text_secondary"
                android:textColor="@color/vision_text_secondary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_report_resolve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resolve"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/vision_accent_green"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>