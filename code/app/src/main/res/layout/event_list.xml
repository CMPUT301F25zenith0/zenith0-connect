<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- HEADER: JACKPOT BOARD -->
    <!-- ListView for Events (Scrollable) -->
    <!-- Header View will be added programmatically -->

    <!-- ListView for Events (Scrollable) -->
    <ListView
        android:id="@+id/events_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:scrollbars="vertical"
        android:clipToPadding="false"/>

    <!-- Bottom Navigation (Refined) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/card_bg"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:elevation="16dp">

        <Button
            android:id="@+id/home_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="@color/primary_gold"
            android:textSize="10sp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconTint="@color/primary_gold"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            android:backgroundTint="@android:color/transparent"/>

        <Button
            android:id="@+id/myevents_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Events"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconTint="@color/text_secondary"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            android:backgroundTint="@android:color/transparent"/>

        <Button
            android:id="@+id/scan_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scan"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="@color/text_secondary"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            android:backgroundTint="@android:color/transparent"/>

        <Button
            android:id="@+id/profile_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconTint="@color/text_secondary"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            android:backgroundTint="@android:color/transparent"/>

        <Button
            android:id="@+id/notificaton_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alerts"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:icon="@android:drawable/ic_popup_reminder"
            app:iconTint="@color/text_secondary"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout>
