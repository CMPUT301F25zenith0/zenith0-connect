<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/card_bg_light"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_arrow"
            app:tint="#4A7070"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Draw"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_primary_light"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Event info card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/eventInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Event Name**"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: ****"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCapacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘¥ Capacity: **"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Waiting: ***"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location: *********"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… MM DD, YYYY"
                android:textColor="#000000"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/filterTabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/eventInfoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnTabWaiting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Waiting"
            android:textColor="@color/text_primary_light"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/btnTabSelected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selected"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/btnTabEnrolled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enrolled"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/btnTabCanceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Canceled"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Bulk Actions -->
    <LinearLayout
        android:id="@+id/manageActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/filterTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ExtraText">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotifySelected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notify Selected"
            android:textAllCaps="false"
            android:textColor="@color/interests"
            android:textSize="14sp"
            app:cornerRadius="22dp"
            app:backgroundTint="@color/mist_pink"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotifyCanceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notify Canceled"
            android:textAllCaps="false"
            android:textColor="@color/interests"
            android:textSize="14sp"
            app:backgroundTint="@color/mist_pink"
            app:cornerRadius="22dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotifyWaiting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notify Waitlist"
            android:textAllCaps="false"
            android:textColor="@color/interests"
            android:textSize="14sp"
            app:backgroundTint="@color/mist_pink"
            app:cornerRadius="22dp"/>

<!--        &lt;!&ndash; NEW: Cancel Unconfirmed button &ndash;&gt;-->
<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/btnCancelUnconfirmed"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="44dp"-->
<!--            android:layout_weight="1"-->
<!--            android:text="Cancel Unconfirmed"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="#2C4E4E"-->
<!--            android:textSize="10sp"-->
<!--            app:cornerRadius="22dp"-->
<!--            app:backgroundTint="#FFE0E0"/>-->
    </LinearLayout>
    <!-- Manual / Replacement Lottery Buttons -->
    <LinearLayout
        android:id="@+id/lotteryButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/manageActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualLottery"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Run Lottery (Manual)"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4A7070"
            app:cornerRadius="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDrawReplacement"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Draw Replacement"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4A7070"
            app:cornerRadius="24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelUnresponsive"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Cancel Unresponsive Entrants"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4A7070"
            app:cornerRadius="24dp"/>

    </LinearLayout>


    <!-- Content Container -->

    <!-- Bottom Navigation -->

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lotteryButtons"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/card_bg_light"
        android:elevation="12dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavDashboard"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="DASHBOARD"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMessage"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="MESSAGES"
            android:textColor="@color/accent_orange"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/accent_orange" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavMap"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="MAP"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_mapmode"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavProfile"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PROFILE"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@color/text_secondary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
