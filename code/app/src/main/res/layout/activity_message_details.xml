<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F8A8A">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#5F8A8A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back with icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:contentDescription="Back"
            android:backgroundTint="#2C4E4E"
            app:icon="@android:drawable/ic_media_previous"
            app:iconTint="#FFFFFF"
            app:iconPadding="0dp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Details"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDel"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Del"
            android:textSize="12sp"
            android:textColor="#2C4E4E"
            android:textAllCaps="false"
            android:backgroundTint="#92B8A0"
            android:minWidth="60dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="40dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Notify Selected -->
            <TextView
                android:text="Notify Selected"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etNotifySelected"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#E8F4F4"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Event -->
            <TextView
                android:text="Event"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEvent"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Event name"
                android:textColorHint="#CCCCCC"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#E8F4F4"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Recipients -->
            <TextView
                android:text="Recipients"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etRecipients"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Recipient info"
                android:textColorHint="#CCCCCC"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#E8F4F4"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Time Stamp -->
            <TextView
                android:text="Time Stamp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etTimeStamp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="Time of Message"
                android:textColorHint="#CCCCCC"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#E8F4F4"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Message -->
            <TextView
                android:text="Message"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Message"
                android:textColorHint="#CCCCCC"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#E8F4F4"
                android:padding="12dp"
                android:textSize="13sp"
                android:layout_marginBottom="16dp" />

            <!-- Message Delivery Stats -->
            <TextView
                android:text="Message Delivery Stats"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Delivered -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:text="delivered"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvDeliveredCount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:drawable/edit_text"
                        android:backgroundTint="#E8F4F4"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Opened -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:text="opened"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvOpenedCount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:drawable/edit_text"
                        android:backgroundTint="#E8F4F4"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Unopened -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="unopened"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvUnopenedCount"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:drawable/edit_text"
                        android:backgroundTint="#E8F4F4"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Resend & Back Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnResend"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Resend"
                    android:textColor="#2C4E4E"
                    android:textSize="14sp"
                    android:backgroundTint="#92B8A0"
                    android:layout_marginEnd="12dp"
                    app:cornerRadius="24dp" />

                <Button
                    android:id="@+id/btnBackBottom"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Back"
                    android:textColor="#2C4E4E"
                    android:textSize="14sp"
                    android:backgroundTint="#92B8A0"
                    app:cornerRadius="24dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
