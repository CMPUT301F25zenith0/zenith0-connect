<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vision_bg"
    tools:context=".activities.AdminOrganizerListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vision_bg"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/vision_bg"
            app:title="Organizer Database"
            app:titleTextColor="@color/vision_text_primary"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:navigationIconTint="@color/vision_text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/vision_bg"
        android:padding="16dp"
        android:fitsSystemWindows="false">

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Search organizers..."
            app:boxBackgroundColor="@color/vision_card_bg"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:startIconTint="@color/vision_text_secondary"
            app:hintTextColor="@color/vision_text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearchOrganizers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/vision_text_primary"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Organizers List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewOrganizers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_admin_organizer" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>

