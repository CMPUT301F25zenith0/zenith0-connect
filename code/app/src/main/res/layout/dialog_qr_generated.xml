<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="28dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="18dp"
        android:paddingBottom="22dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Code Generated"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- QR image area -->
        <FrameLayout
            android:id="@+id/qrContainer"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="4dp"
            android:background="#F5F5F5"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgQr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:contentDescription="QR code image"
                android:src="@android:drawable/ic_menu_gallery" />
        </FrameLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Copy Link -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopyLink"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Copy Link"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="#92B8A0"
                app:cornerRadius="24dp"
                android:layout_marginTop="12dp" />

            <!-- Share QR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareQr"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Share QR"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="#92B8A0"
                app:cornerRadius="24dp"
                android:layout_marginTop="12dp" />

            <!-- Close -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="#2C4E4E"
                app:cornerRadius="24dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>