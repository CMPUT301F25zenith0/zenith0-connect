<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet and Notifications -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>

    <!-- Camera and Media -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:name=".ConnectApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Connect">

        <!-- âœ… Start the app with MainActivity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateAcctActivity"
            android:exported="false" />

        <!-- Event Activities -->
        <activity
            android:name=".activities.EventListActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EventDetails"
            android:exported="false" />
        <activity
            android:name=".activities.CreateEvent"
            android:exported="false" />

        <!-- Organizer Activities -->
        <activity
            android:name=".activities.OrganizerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrganizerMessagesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ManageDrawActivity"
            android:exported="false"
            android:theme="@style/Theme.Connect" />

        <!-- Admin Activities -->
        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="false" />
        <activity android:name=".activities.AdminEventListActivity" />
        <activity android:name=".activities.AdminProfileListActivity" />
        <activity android:name=".activities.AdminImageListActivity" />
        <activity android:name=".activities.AdminEventDetailActivity"
            android:exported="false"/>
        <activity android:name=".activities.AdminOrganizerListActivity" />
        <activity android:name=".activities.AdminNotificationLogActivity" />
        <activity android:name=".activities.ImageDetailsActivity" />
        <activity android:name=".activities.AdminReportActivity" />

        <!-- User Profile -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false" />

        <!-- QR Code Scanner -->
        <activity
            android:name=".activities.QRCodeScanner"
            android:exported="false" />

        <!-- Notifications for Entrant -->
        <activity
            android:name=".activities.UserNotificationsActivity"
            android:exported="false"
            android:label="My Notifications"/>

        <!-- Services -->
        <!-- Notification Listener Service -->
        <service
            android:name=".network.NotificationListenerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"/>

    </application>

</manifest>