<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- for notifications -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>


    <application
        android:name=".ConnectApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Connect">


        <!-- âœ… Start the app with MainActivity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities (no launcher intent-filter) -->
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.EventListActivity" />
        <activity android:name=".activities.EventDetails" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.CreateAcctActivity" />
        <activity android:name=".activities.OrganizerActivity" />
        <activity android:name=".activities.OrganizerMessagesActivity" />
        <activity android:name=".activities.AdminDashboardActivity" />

        <activity android:name=".activities.QRCodeScanner" />
        <activity
            android:name=".activities.CreateEvent"
            android:exported="false" />

        <!-- Notifications for Entrant -->
        <activity
            android:name=".activities.NotificationsActivity"
            android:exported="false"
            android:label="My Notifications"/>

        <service
            android:name=".network.NotificationListenerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"/>
        <activity
            android:name=".activities.ManageDrawActivity"
            android:exported="false"
            android:theme="@style/Theme.Connect" />
    </application>

    <!-- Permission to Use Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-feature android:name="android.hardware.camera" android:required="false" />

</manifest>